#!/bin/bash

VERSION=0.0.6

TEMPDIR=/tmp/gin
INSTALLDIR=$HOME/bin

mkdir -p $INSTALLDIR
mkdir -p $TEMPDIR
curl -L "https://github.com/richardhodgson/gin/tarball/v$VERSION" | tar -xz -C $TEMPDIR
cp $TEMPDIR/richardhodgson-gin-*/gin $INSTALLDIR/gin
chmod +x $INSTALLDIR/gin
rm -fr $TEMPDIR

echo "Gin (version $VERSION) installed to $INSTALLDIR/gin."

#!/bin/bash

VERSION=0.0.7

TEMPDIR=/tmp/gin
INSTALLDIR=$HOME/bin

if [[ ! "$PATH" =~ "$INSTALLDIR" ]]; then
    INSTALLDIR='/usr/local/bin'
fi

mkdir -p $INSTALLDIR
mkdir -p $TEMPDIR
echo "Downloading Gin v$VERSION..."
curl --location --progress-bar "https://github.com/richardhodgson/gin/tarball/v$VERSION" | tar -xz -C $TEMPDIR
cp $TEMPDIR/richardhodgson-gin-*/gin $INSTALLDIR/gin
chmod +x $INSTALLDIR/gin
rm -fr $TEMPDIR

echo "Gin (version $VERSION) installed to $INSTALLDIR/gin."
